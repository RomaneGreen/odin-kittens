<%= form_for(@kitten)do |f| %>

   <%= f.label :name %>
    <%= f.text_field :name, :required => 'required'%>

    <%= f.label :age %>
     <%= f.text_field :age, :required => 'required'%>

     <%= f.label :cuteness %>
      <%= f.text_field :cuteness, :required => 'required'%>

      <%= f.label :softness %>
       <%= f.text_field :softness, :required => 'required'%>

  <%= f.submit %>

<% end %>
